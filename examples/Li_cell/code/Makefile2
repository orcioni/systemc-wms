CXX = g++
include ../Makefile-local
CFLAGS += -O2 -std=c++11 -I/opt/local/include
LDLIBS += -lsystemc -llapack -larmadillo -L /opt/local/lib
TARGET := cells

SRCS := battery_P.cpp cell.cpp

%.o : %.cpp
	$(CXX) $(CFLAGS) -o $@ -c $<

$(TARGET) : $(SRCS:%.cpp=%.o)
	$(CXX) -o $@ $+ $(LDLIBS)

Depends : $(SRCS)
	$(CXX) $(CFLAGS) -MM $+ > Depends

clean :
	rm -f Depends $(SRCS:%.cpp=%.o) $(TARGET)

Makefile : Depends

include Depends
