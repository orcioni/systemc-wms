#ifndef CONSTANTS_H
#define CONSTANTS_H

const double c  = 299792458;           //velocity of light
const double pi = 3.1415926535897932384626433832795;
const double u0 = 4*pi*1e-07;          //permeability of vacuum
const double e0 = 1/(u0*c*c);        //permettivity of vacuum
const double g  = 6.67259e-11;         //Newtonian constant of gravitation
const double h  = 6.6260755e-34;       //Plank constant
const double e  = 1.60217733e-19;      //elementary charge
const double phi0 = h/(2*e);           //magnetic flux quantum
const double me = 9.1093897e-31;       //electron mass
const double mp = 1.6726231e-27;       //proton mass
const double Na = 6.0221367e+23;       //Avogadro constant
const double k  = 1.380658e-23;        //Boltzmann constant
const double ssigma = 5.670367e-8;       //Stefanâ€“Boltzmann constant kg / s^3 / K^4

#endif
